@using Project_Builder_Development.Models
@model LoginViewModel
@{
    ViewBag.Title = "Project Builder";
}
<head>
    <link href="@Url.Content("~/Content/Login.css")" rel="stylesheet" type="text/css" />
</head>

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Login to your account here.</h4>
                <hr />
                <div class="container" style="height:initial">
                    <div class="row">
                        <div class="Absolute-Center is-Responsive">
                            <div class="col-md-12">
                                <h3>Login</h3>
                            </div>
                            <div class="col-md-12">
                                <form action="" id="loginForm">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" }) 
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.UserId, "UserID", new { @class = "col-md-2 control-label" })
                                        <div class="col-md-9 col-md-offset-1">
                                            @Html.TextBoxFor(m => m.UserId, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password, "Password", new { @class = "col-md-2 control-label" })
                                        <div class="col-md-9 col-md-offset-1">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="checkbox-form">
                                        <div class="col-md-offset-2 col-md-10">
                                            <div class="checkbox">
                                                @*@Html.CheckBoxFor(m => m.RememberMe)
                                                @Html.LabelFor(m => m.RememberMe)*@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="login-btn">
                                        <input type="submit" value="Log in" class="btn btn-default" />
                                    </div>
                                    <div class="form-group text-center">
                                        @Html.ActionLink("Forgot password?", "ForgotPassword")<br/>
                                        @Html.ActionLink("New to ProjectBuilder? Sign up!", "Register")
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}